{
  "compilerOptions": {
    "baseUrl": "./",
    "moduleResolution": "node",
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "paths": {
      "*": ["node_modules/*", "src/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
}
